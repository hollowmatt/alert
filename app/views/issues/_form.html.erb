<%= simple_form_for([platform, issue]) do |f| %>
	
	<%= f.input :priority, collection: ['P1', 'P2', 'P3'], selected: 'P1' %>
	<%= f.input :subject %>
	<%= f.input :issue %>
	<%= f.input :impact %>
	<%= f.input :ticket %>
	<%= f.input :status %>
	<%= f.input :next_steps %>
	<%= f.simple_fields_for :attachments do |ff| %>
	  <%= ff.input :file, as: :file, label: "File ##{ff.index + 1}" %>
	  <%= ff.input :file_cache, as: :hidden %>
	<% end %>

	<%= f.button :submit, class: "btn-primary" %>

<% end %>