<%= simple_form_for([platform, issue]) do |f| %>
	
	<%= f.input :priority, collection: ['P1', 'P2', 'P3'], selected: 'P1' %>
	<%= f.input :subject %>
	<%= f.input :issue %>
	<%= f.input :impact %>
	<%= f.input :ticket %>
	<%= f.input :status %>
	<%= f.input :next_steps %>
	<div id="attachments">
	  <h3>Attachments</h3>
	  <%= render partial: "attachments/form", locals: { f: f, index: 0} %>
  </div>
	<%= link_to "Add another file", new_attachment_path, remote: true, id: "add_file", data: { params: { index: issue.attachments.size } } %>
	
	<%= f.button :submit, class: "btn-primary" %>

<% end %>