
<div class="page-header">
  <h1>Followers</h1>
  <ul class="actions">
    <li>
      <%= link_to "New Follower", new_admin_follower_path(), class: "new-btn" %>
    </li>
  </ul>
</div>

<div class="container">
  <div class="row header-row">
    <div class="col-xs-6">
      Name
    </div>
    <div class="col-xs-3">
      Email 
    </div>
    <div class="col-xs-3">
      Created
    </div>
  </div>
  <% @followers.each do |f| %>
    <div class="row">
      <div class="col-xs-6">
       <%= link_to f.name, [:admin, f] %>
      </div>
      <div class="col-xs-3">
        <%= f.email %> 
      </div>
      <div class="col-xs-3">
        <%= f.created_at.getlocal.strftime("%B %d at %I:%M %p") %>
      </div>
    </div>
  <% end %>
</div>